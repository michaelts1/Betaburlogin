{
	"manifest_version": 2,
	"name": "Betabur Login",
	"version": "1.0.0.0beta6",
	"description": "Helps logging in with all the alts on beta.avabur.com",

	"applications": {
		"gecko": {
			"id": "betaburloginID@example.com"
		}
	},

	"icons": {
		"60": "src/images/betaburlogin.png"
	},

	"content_scripts": [
		{
			"matches": [
				"https://*.avabur.com/",
				"https://*.avabur.com/?expired=1",
				"https://beta.avabur.com/game"
			],
			"js": [
				"src/js/jquery-3.5.1.min.js",
				"src/js/helpers.js"
			]
		},
		{
			"matches": [
				"https://www.avabur.com/",
				"https://www.avabur.com/?expired=1"
			],
			"js": ["src/js/login/live-login.js"]
		},
		{
			"matches": [
				"https://beta.avabur.com/?expired=1",
				"https://beta.avabur.com/"
			],
			"js": ["src/js/login/beta-login.js"]
		},
		{
			"matches": [
				"https://beta.avabur.com/game"
			],
			"js": ["src/js/game/beta-game.js"]
		}
	],

	"background": {
		"scripts": [
			"src/js/helpers.js",
			"src/js/background/settings.js",
			"src/js/background/background.js"
		]
	},

	"options_ui": {
		"page": "src/html/options.html",
		"open_in_tab": true
	},

	"browser_action": {
		"default_icon": {
			"60": "src/images/betaburlogin.png"
		},
		"default_title": "Betabur Login",
		"default_popup": "src/html/browser_action.html"
	},

	"permissions": [
		"storage",
		"tabs",
		"cookies",
		"contextualIdentities"
	]
}
