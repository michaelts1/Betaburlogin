{
	"env": {
		"es2020": true,
		"jquery": true,
		"browser": true,
		"webextensions": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 11
	},
	"globals": {
		"delay": "readonly",
		"eventListeners": "readonly",
		"insecureCrypt": "readonly",
		"log": "readonly",
		"objectEquals": "readonly"
	},
	"rules": {
		"semi": [
			"error",
			"never"
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase" : 1
			}
		],
		"quotes": [
			"error",
			"double",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"strict": [
			"error",
			"global"
		],
		"eol-last": [
			"error",
			"always"
		],
		"comma-dangle" : [
			"error",
			"always-multiline"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 1
			}
		],
		"init-declarations": [
			"error",
			"always"
		],
		"no-use-before-define": [
			"error", {
				"functions": false,
				"classes": false,
				"variables": true
			}
		],
		"no-var": "error",
		"no-eval": "error",
		"no-implied-eval": "error",
		"no-trailing-spaces": "error",
		"no-inner-declarations": "off"
	}
}
